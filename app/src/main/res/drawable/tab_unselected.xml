<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80CBC4" />
        </shape>
    </item>

    <item
        android:bottom="0dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle">
            <padding
                android:bottom="10dp"
                android:left="6dp"
                android:right="6dp"
                android:top="10dp" />
            <stroke
                android:width="0dp"
                android:color="#FFFFFF" />
            <solid android:color="#00000000" />
        </shape>
    </item>
</layer-list>