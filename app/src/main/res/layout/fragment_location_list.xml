<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/dp_4"
    android:layout_marginTop="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_4"
    android:layout_marginBottom="@dimen/dp_8"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/dp_4"
    app:contentPaddingLeft="@dimen/dp_4"
    app:contentPaddingRight="@dimen/dp_4"
    tools:context=".fragment.LocationListFragment">

    <ListView
        android:id="@+id/location_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbarSize="2dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@color/colorPrimary"
        tools:listitem="@layout/location_list_item" />

    <TextView
        android:id="@+id/txt_no_location"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/txt_no_location"
        android:textColor="@color/colorRed"
        android:textStyle="bold"
        android:visibility="gone" />

</android.support.v7.widget.CardView>