<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/txt_unknown_asset_number"
                style="@style/ColorViewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/img_unknown_scan"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_4"
                android:contentDescription="@string/img_scan"
                android:src="@drawable/ic_stock_take" />

            <ImageView
                android:id="@+id/img_unknown_description"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_4"
                android:contentDescription="@string/img_description"
                android:src="@drawable/ic_description"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_unknown_evidence"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:contentDescription="@string/img_image"
                android:src="@drawable/ic_image"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>